<section id="players_show">
  <h4 class="player_name"><%= @player.full_name %></h4>
  <h5 class="team_name ml-2">(<%= @player.team.abbr_name %>)</h5>
  <div class="top_area mt-5">
    <div class="input_area mb-3">
      <p>Recent</p><input class="form-control-sm mx-2"><p>Games</p>
    </div>
    <div class="select_area">
      <label>Opponent</label>
      <select id="opponent_select" multiple="multiple" class="input-group">
        <% @all_opponents.each do |opponent| %>
          <option value="<%= opponent.id %>"><%= opponent.abbr_name %></option>
        <% end %>
      </select>
    </div>
    <div class="text-right mt-3">
      <div id="export_csv">
        <%= link_to "Export", export_csv_player_path(@player, format: 'csv'), class: "btn btn-info" %>
      </div>
      <div class="detail_area">
        <button type="button" class="show_detail_btn btn btn-secondary">Detail <i class="fas fa-angle-double-right"></i></button>
        <button type="button" class="hide_detail_btn btn btn-secondary d-none"><i class="fas fa-angle-double-left"></i> Hide</button>
      </div>
    </div>
  </div>
  <div class="table-responsive mt-2">
    <table class="table table-striped table-hover few">
      <thead class="thead-light">
        <tr>
          <td><%= show_game_header %></td>
          <td>Opponent</td>
          <td>Coach Play Score</td>
          <td class="detail">MIN</td>
          <td class="detail">PTS</td>
          <td class="detail">FGM</td>
          <td class="detail">FGA</td>
          <td class="detail">3PM</td>
          <td class="detail">3PA</td>
          <td class="detail">FTM</td>
          <td class="detail">FTA</td>
          <td class="detail">OREB</td>
          <td class="detail">DREB</td>
          <td class="detail">AST</td>
          <td class="detail">TOV</td>
          <td class="detail">STL</td>
          <td class="detail">BLK</td>
          <td class="detail">PF</td>
          <td class="detail">+/-</td>
          <td class="detail">DNP</td>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "shared/player_game_record", :collection => @records, as: :record %>
      </tbody>
    </table>
  </div>
</section>