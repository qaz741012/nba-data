$('tbody').html(`
<%= j(render partial: "shared/player_game_record", :collection => @records, as: :record) %>
`);

if ($('thead .detail').css('display') === 'table-cell') {
  $('.detail').css('display', 'table-cell');
} else {
  $('.detail').css('display', 'none');
}

$('#export_csv').html(`
<%= j(link_to "Export", export_csv_player_path(@player, 
                                               format: 'csv', 
                                               player: { 
                                                 limit: @limit, 
                                                 selected_opponents_id: @selected_opponents_id
                                               }), 
                        class: "btn btn-info") %>
  `);